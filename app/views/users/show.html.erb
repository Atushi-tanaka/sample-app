<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :名前 %></th>
          <th><%= User.human_attribute_name :メールアドレス %></th>
          <th><%= User.human_attribute_name :作成日 %></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
          <td><%= @user.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
